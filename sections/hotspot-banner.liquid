<section class="hotspot-banner" style="background-image: url('{{ section.settings.background_image | image_url }}');">
  <div class="hotspot-banner__content hotspot-banner__content--{{ section.settings.text_position }}">
    <h1 class="hotspot-banner__title">{{ section.settings.title }}</h1>
    <p>{{ section.settings.description }}</p>
    <a href="{{ section.settings.cta_link }}" class="hotspot-banner__cta">{{ section.settings.cta_text }}</a>
  </div>
    <div class="hotspot-banner__hotspots">
      {% for block in section.blocks %}
        <button class="hotspot-banner__hotspot" 
          data-modal-id="modal-{{ block.id }}" 
          style="left: {{ block.settings.position_x }}%; top: {{ block.settings.position_y }}%;">
          <img
            src="{{ 'PlusCircleIcon.svg' | asset_url }}"
            alt="Plus Circle Icon"
          />
        </button>
        {% render 'hover-modal.liquid', 
          posX: block.settings.position_x,
          posY: block.settings.position_y,
          product: block.settings.product,
          param: value,
          id: block.id
         %}
      {% endfor %}
    </div>
</section>

<style>
  .hotspot-banner {
    position: relative;
    width: 100%;
    height: 80vh;
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hotspot-banner__content {
    position: absolute;
    max-width: 40%;
  }

  .hotspot-banner__content--top-left {
    top: 10%;
    left: 10%;
    text-align: left;
  }

  .hotspot-banner__content--top-right {
    top: 10%;
    right: 10%;
    text-align: right;
  }

  .hotspot-banner__content--bottom-left {
    bottom: 10%;
    left: 10%;
    text-align: left;
  }

  .hotspot-banner__content--bottom-right {
    bottom: 10%;
    right: 10%;
    text-align: right;
  }

  .hotspot-banner__content--center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .hotspot-banner__cta {
    display: inline-block;
    padding: 10px 20px;
    background-color: #000;
    color: #fff;
    text-transform: uppercase;
    text-decoration: none;
  }

  .hotspot-banner__hotspots {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
  }

  .hotspot-banner__hotspot {
    position: absolute;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    background: transparent;
    border: none;
    padding: 0;
  }

@media only screen and (max-width: 768px) {
  .hotspot-banner__hotspots {
    display: none;
  }

  .hotspot-banner__title {
    margin: 0;
  }

  .hotspot-banner__content--top-left {
    top: 5%;
    left: 5%;
    text-align: left;
  }

  .hotspot-banner__content--top-right {
    top: 5%;
    right: 5%;
    text-align: right;
  }

  .hotspot-banner__content--bottom-left {
    bottom: 5%;
    left: 5%;
    text-align: left;
  }

  .hotspot-banner__content--bottom-right {
    bottom: 5%;
    right: 5%;
    text-align: right;
  }

  .hotspot-banner__content--center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}
</style>

{% schema %}
  {
    "name": "Hotspot Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link"
      }, {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      }, {
        "type": "select",
        "id": "text_position",
        "label": "Text Position",
        "options": [
          {
            "value": "top-left",
            "label": "Top Left"
          },
          {
            "value": "top-right",
            "label": "Top Right"
          },
          {
            "value": "bottom-left",
            "label": "Bottom Left"
          },
          {
            "value": "bottom-right",
            "label": "Bottom Right"
          }, {
            "value": "center",
            "label": "Center"
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "hotspot",
        "name": "Hotspot",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }, {
            "type": "range",
            "id": "position_x",
            "label": "Position X",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 50
          }, {
            "type": "range",
            "id": "position_y",
            "label": "Position Y",
            "min": 0,
            "max": 100,
            "step": 1,
            "default": 50
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hotspot Banner",
        "category": "Custom"
      }
    ]
  }
{% endschema %}